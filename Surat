    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Interactive Love Envelope</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #fce4ec;
            flex-direction: column;
        }
        .envelope {
            position: relative;
            width: 200px;
            height: 150px;
            background-color: pink;
            border-radius: 10px;
            overflow: hidden;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .message {
            position: absolute;
            top: 100%;
            transition: top 0.5s;
            font-size: 18px;
            font-weight: bold;
        }
        .hearts {
            position: absolute;
            bottom: 0;
            width: 100%;
            display: none;
        }
        .heart {
            position: absolute;
            color: red;
            font-size: 20px;
            opacity: 0;
            animation: rise 2s ease-out forwards;
        }
        @keyframes rise {
            0% { transform: translateY(0); opacity: 1; }
            100% { transform: translateY(-100px); opacity: 0; }
        }
        .buttons {
            margin-top: 20px;
        }
        button {
            padding: 10px;
            margin: 5px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
